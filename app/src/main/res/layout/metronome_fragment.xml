<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stopButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".MetronomeFragment">

    <TextView
        android:id="@+id/bpmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/segment7_gml"
        android:textColor="@color/digitalText"
        android:textSize="@dimen/bpm_digital_text"
        app:layout_constraintEnd_toEndOf="@+id/bpmSeekbar"
        app:layout_constraintStart_toEndOf="@+id/bpmLabelText"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100" />

    <TextView
        android:id="@+id/bpmLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/bpm"
        android:textColor="@color/digitalText"
        android:textSize="@dimen/bpm_text"
        app:layout_constraintStart_toStartOf="@+id/bpmSeekbar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/bpm" />

    <SeekBar
        android:id="@+id/bpmSeekbar"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:max="220"
        android:min="40"
        android:progress="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bpmText" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintStart_toStartOf="@+id/bpmSeekbar"
        app:layout_constraintTop_toBottomOf="@+id/bpmSeekbar" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:src="@android:drawable/ic_media_pause"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toTopOf="@+id/playButton" />

</androidx.constraintlayout.widget.ConstraintLayout>